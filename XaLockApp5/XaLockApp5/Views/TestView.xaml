<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XaFirstMVVMNav.Views.TestView"
             xmlns:baseViewModel="clr-namespace:XaFirstMVVMNav.ViewModels;assembly=XaFirstMVVMNav"
             baseViewModel:ViewModelLocator.AutoWireViewModel="true"
             BackgroundColor="Pink">    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This is just a testview!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Go To another view" CornerRadius="6" 
                        FontSize="Small" Command="{Binding NavigateToSentenceCMD}"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>